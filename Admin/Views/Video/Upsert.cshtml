@model VideoVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Video.Id != 0 ? "Update" : "Create") Video</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Video.Id" hidden/>
            <input asp-for="Video.ImageUrl" hidden/>
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @*<div asp-validation-summary="ModelOnly"></div>*@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Video.Name" class="form-control border-0 shadow"/>
                            <label asp-for="Video.Name" class="ms-2"></label>
                            <span asp-validation-for="Video.Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <textarea asp-for="Video.Description" class="form-control border-0 shadow"></textarea>
                            <label asp-for="Video.Description" class="ms-2"></label>
                            <span asp-validation-for="Video.Description" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Video.TotalTime" class="form-control border-0 shadow"/>
                            <label asp-for="Video.TotalTime" class="ms-2"></label>
                            <span asp-validation-for="Video.TotalTime" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Video.StreamingUrl" class="form-control border-0 shadow"/>
                            <label asp-for="Video.StreamingUrl" class="ms-2"></label>
                            <span asp-validation-for="Video.StreamingUrl" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="Video.GenreId" asp-items="@Model.GenreList" class="form-select border-0 shadow">
                                <option disabled selected>--Select Genre--</option>
                            </select>
                            <label asp-for="Video.GenreId" class="ms-2"></label>
                            <span asp-validation-for="Video.GenreId" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="Video.TagId" asp-items="@Model.TagList" class="form-select border-0 shadow">
                                <option disabled selected>--Select Tag--</option>
                            </select>
                            <label asp-for="Video.TagId" class="ms-2"></label>
                            <span asp-validation-for="Video.TagId" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="file" name="file" class="form-control border-0 shadow"/>
                            <label asp-for="Video.ImageUrl" class="ms-2"></label>
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Video.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>    
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Video" asp-action="Index" class="btn btn-outline-primary border form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <img src="@Model.Video.ImageUrl" width="100%" style="border-radius: 5px; border: 1px solid silver" alt="Image"/>
                </div>
            </div>
           
        </form>
    </div>
</div>




@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}